<resources>
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/police_blue</item>
        <item name="android:statusBarColor">@color/police_blue</item>
        <item name="colorAccent">@color/space_cadet</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="cardBackgroundColor">@color/desert_sand</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/desert_sand</item>
        <item name="background">@color/desert_sand</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/police_blue</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.App.CardView.Background" parent="">
        <item name="backgroundColor">@color/police_blue</item>
    </style>
</resources>
