<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="authentication_category"
        app:title="Authentication"
        app:useSimpleSummaryProvider="true">

        <EditTextPreference
            app:key="auth_secret"
            app:title="Authentication secret"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="rpist_category"
        app:title="RPIST">

        <EditTextPreference
            app:key="rpist_hostname"
            app:title="Node host name"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="rpist_port"
            app:title="Node port"
            app:useSimpleSummaryProvider="true"/>
        <ListPreference
            app:key="mode"
            app:title="RPIST serving mode"
            android:entries="@array/modes"
            android:entryValues="@array/modes"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory
        app:key="other_category"
        app:title="Other">

        <EditTextPreference
            app:key="refresh_rate"
            android:digits="0123456789"
            android:inputType="numberDecimal"
            app:title="Temperature refresh rate(in seconds)"
            app:useSimpleSummaryProvider="true"/>
        <ListPreference
            app:key="scale"
            app:title="Temperature scale"
            android:entries="@array/scales"
            android:entryValues="@array/scales"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>